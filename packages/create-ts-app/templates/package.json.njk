{
  "name": "{{ name }}",
  {% if isESM -%}
  "type": "module",
  {% endif -%}
  "version": "0.0.0",
  "description": "a project create by create-ts-app",
  {% if author -%}
  "author": "{{ author }}",
  {% endif -%}
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "types": "dist/esm/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/esm/index.d.ts",
        "default": "./dist/esm/index.js"
      },
      "require": {
        "types": "./dist/esm/index.d.ts",
        "default": "./dist/cjs/index.js"
      }
    }
  },
  "sideEffects": false,
  "scripts": {
    "dev": "father dev",
    "build": "father build",
    "test": "vitest"
  },
  "files": [
    "dist"
  ],
  "devDependencies": {
    "@types/node": "^20.3.1",
    "father": "^4.2.3",
    "typescript": "^5.1.3",
    "vitest": "^0.32.2"
  }
}