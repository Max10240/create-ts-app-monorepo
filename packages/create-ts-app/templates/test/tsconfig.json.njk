{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "bundler",
    "moduleDetection": "force",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "rootDir": "../",
    "baseUrl": "./",
    "paths": {
      "@/*": ["../src/*"],
      "@test/*": ["./*"]
    },
    "noEmit": true
  }
}